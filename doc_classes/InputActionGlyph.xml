<?xml version="1.0" encoding="UTF-8" ?>
<class name="InputActionGlyph" inherits="CenterContainer" version="4.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../doc/class.xsd">
	<brief_description>
		A glyph with a text next to it.
	</brief_description>
	<description>
	</description>
	<tutorials>
	</tutorials>
	<members>
		<member name="action_name" type="StringName" setter="set_action_name" getter="get_action_name" default="&amp;&quot;ui_left&quot;">
			Action that will be displayed in this glyph.
		</member>
